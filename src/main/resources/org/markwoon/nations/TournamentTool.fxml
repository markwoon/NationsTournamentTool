<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?><AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.markwoon.nations.Controller">
  <StackPane>
    <TabPane prefHeight="300.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE">
      <tabs>
        <Tab text="Get Game List">
          <BorderPane xmlns:fx="http://javafx.com/fxml">
            <center>
              <GridPane hgap="8" vgap="4">
                <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="70.0" prefWidth="80.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="130.0" prefWidth="400.0" />
                </columnConstraints>
                <padding>
                  <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
                </padding>
                <Label text="Tournament Prefix:"
                    GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <TextField fx:id="tournamentInput"
                    GridPane.rowIndex="0" GridPane.columnIndex="1" />

                <Label text="Save File To:"
                    GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <TextField fx:id="dirInput"
                    GridPane.rowIndex="1" GridPane.columnIndex="1" />

                <Button mnemonicParsing="false" text="Choose Directory"
                    GridPane.rowIndex="2" GridPane.columnIndex="1" onAction="#chooseDirectory" />
              </GridPane>
            </center>
            <bottom>
              <ButtonBar prefHeight="40.0" prefWidth="200.0">
                <buttons>
                  <Button mnemonicParsing="false" text="Download List"
                      ButtonBar.buttonData="RIGHT" onAction="#downloadList" />
                </buttons>
                <padding>
                  <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
                </padding>
              </ButtonBar>
            </bottom>
          </BorderPane>
        </Tab>
        <Tab text="Get Game Info">
          <BorderPane xmlns:fx="http://javafx.com/fxml">
            <center>
              <GridPane hgap="8" vgap="4">
                <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="70.0" prefWidth="70.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="130.0" prefWidth="500.0" />
                </columnConstraints>
                <padding>
                  <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
                </padding>

                <Label text="Game list:" />
                <TextField fx:id="fileInput" GridPane.columnIndex="1" />

                <Button mnemonicParsing="false" text="Choose File"
                    GridPane.rowIndex="1" GridPane.columnIndex="1" onAction="#chooseFile" />
              </GridPane>
            </center>
            <bottom>
              <ButtonBar prefHeight="40.0" prefWidth="200.0">
                <buttons>
                  <Button fx:id="dlGameInfoBtn" mnemonicParsing="false" text="Download Game Info"
                      ButtonBar.buttonData="RIGHT" onAction="#downloadGameInfo" />
                </buttons>
                <padding>
                  <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
                </padding>
              </ButtonBar>
            </bottom>
          </BorderPane>
        </Tab>
      </tabs>
    </TabPane>
    <VBox fx:id="loading" alignment="CENTER" visible="false">
      <ProgressIndicator />
    </VBox>
  </StackPane>
  <padding>
    <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
  </padding>
</AnchorPane>
